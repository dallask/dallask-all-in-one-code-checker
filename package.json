{
  "name": "dallask-all-in-one-code-checker",
  "version": "1.0.1",
  "description": "All-in-one code checker with ready configs and scripts: ESLint, StyleLint, Prettier",
  "main": "tetsfile.js",
  "license": "MIT",
  "keywords": [
    "lint",
    "checker",
    "eslint",
    "sasslint",
    "stylelint",
    "prettier",
    "csslint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dallask/dallask-all-in-one-code-checker.git"
  },
  "dependencies": {
    "eslint": "^7.32.0",
    "prettier": "2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "devDependencies": {},
  "scripts": {
    "postinstall": "cp dist/.eslintignore $INIT_CWD && cp dist/.eslintrc.json $INIT_CWD && cp dist/.prettierignore $INIT_CWD && cp dist/.prettierrc.json $INIT_CWD && cp dist/.stylelintignore $INIT_CWD && cp dist/.stylelintrc.json $INIT_CWD",
    "test": "exit 0",
    "stylelint": "stylelint '**/*.scss'",
    "stylelint:fix": "stylelint '**/*.scss' --fix",
    "prettier": "prettier '**/*' --check",
    "prettier:fix": "prettier '**/*' --write",
    "eslint": "eslint '**/*.js'",
    "eslint:fix": "eslint '**/*.js' --fix"
  },
  "files": [
    "dist/.eslintignore",
    "dist/.eslintrc.json",
    "dist/.prettierignore",
    "dist/.prettierrc.json",
    "dist/.stylelintignore",
    "dist/.stylelintrc.json"
  ],
  "author": {
    "name": "Ievgen Kyvgyla",
    "email": "hello@kivgila.pro",
    "url": "https://kivgila.pro"
  }
}
